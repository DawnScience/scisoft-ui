<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="uk.ac.diamond.scisoft.analysis.powder.matcher.ccdc.rcp.views.CellSearchRoutineView"
            icon="icons/cellSearch.png"
            id="uk.ac.diamond.scisoft.analysis.powder.matcher.ccdc.rcp.CellSearchRoutineView"
            name="Unit Cell Searcher"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="uk.ac.diamond.scisoft.analysis.powder.matcher.ccdc.rcp.PowderAnalysisPerspective">
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.dawnsci.plotting.api.toolPage">
      <plotting_tool_page
            category="org.dawnsci.plotting.tools.category.Science"
            class="uk.ac.diamond.scisoft.analysis.powder.matcher.ccdc.rcp.tools.CellSearcherTool"
            icon="icons/cellSearch.png"
            id="uk.ac.diamond.scisoft.analysis.powder.matcher.ccdc.rcp.tools.CellSearcherTool"
            label="Powder Cell Searcher Tool"
            tooltip="Open a view dedicated to x-ray powder unit searching  ">
      </plotting_tool_page>
   </extension>

</plugin>
