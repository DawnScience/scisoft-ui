      <command
            defaultHandler="uk.ac.diamond.sda.navigator.views.CreateProjectHandler"
            id="uk.ac.diamond.sda.navigator.createProject"
            name="Create Project">
      </command>
      <command
            defaultHandler="uk.ac.diamond.sda.navigator.views.OpenFileNavigatorHandler"
            id="uk.ac.diamond.sda.navigator.newFileView"
            name="Open file navigator">
      </command>
