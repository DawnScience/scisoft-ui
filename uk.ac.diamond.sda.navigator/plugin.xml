         </description>
      </decorator-->
      <decorator
            adaptable="true"
            class="uk.ac.diamond.sda.navigator.hdf5.HDF5LabelProvider"
            id="uk.ac.diamond.sda.navigator.hdf5Decorator"
            label="HDF5 element"
            state="true">
         <enablement>
            <objectClass
                  name="uk.ac.diamond.scisoft.analysis.rcp.navigator.treemodel.TreeNode">
            </objectClass></enablement>
         <description>
            Displays the HDF5 tree elements caracteristics.
         </description>
      </decorator>
      <decorator
            adaptable="true"
            class="uk.ac.diamond.sda.navigator.decorator.LightweightScanCommandDecorator"
            id="uk.ac.diamond.sda.navigator.scanCmdFileDecorator"
            label="SRS/Nexus Scan Command and Title Decorator"
            lightweight="true"
            state="true">
         <enablement>
            <objectClass
                  name="org.eclipse.core.resources.IResource">
            </objectClass>
         </enablement>
         <description>
            Displays the Scan Command of a .dat file and the Title and Scan Command of a Nexus file (if there are any).
         </description>
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:uk.ac.diamond.sda.navigator.views.FileView">
         <command
               commandId="uk.ac.diamond.sda.navigator.openCommand"
               label="Open"
               style="push">
         </command>
         <command
               commandId="uk.ac.diamond.sda.navigator.openCommand"
               icon="icons/folder_go.png"
               label="Monitor"
               style="push">
         </command>
          <separator
               name="uk.ac.diamond.sda.navigator.separator1"
               visible="true">
         </separator>
         <command
               commandId="uk.ac.diamond.scisoft.analysis.rcp.contributions.openImageGridView"
               label="Open in Image Grid"
               style="push">
         </command>
         <command
               commandId="uk.ac.diamond.sda.navigator.createProject"
               icon="icons/newprj_wiz.gif"
               label="Create link to data"
               style="push"
               tooltip="Create data link, creates a new project if necessary">
         </command>
         <separator
               name="uk.ac.diamond.sda.navigator.separator2"
               visible="true">
         </separator>
         <command
               commandId="uk.ac.diamond.sda.navigator.refresh"
               icon="icons/refresh.gif"
               label="Refresh"
               style="push"
               tooltip="Refresh file tree">
         </command>
         <command
               commandId="uk.ac.diamond.sda.navigator.collapseAll"
               icon="icons/CollapseAll.png"
               label="Collapse All"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:uk.ac.diamond.sda.navigator.views.FileView">
         <separator
               name="uk.ac.diamond.sda.navigator.separator3"
               visible="true">
         </separator>
         <command
               commandId="uk.ac.diamond.sda.navigator.collapseAll"
               icon="icons/CollapseAll.png"
               label="Collapse All"
               style="push">
         </command>
         <command
               commandId="uk.ac.diamond.sda.navigator.refresh"
               icon="icons/refresh.gif"
               label="Refresh"
               style="push"
               tooltip="Refresh file tree">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="uk.ac.diamond.sda.navigator.views.OpenHandler"
            id="uk.ac.diamond.sda.navigator.openCommand"
